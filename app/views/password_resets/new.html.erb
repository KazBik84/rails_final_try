<% provide :title, "Forgot password" %>
<h1>Forgot password?</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!-- ponieważ niema modelu Reset_password, form_for, by działać musi otrzymać, nazwę hashu do którego zapisze atrybuty i ścieżkę gdzie posłać
    żądanie POST -->    
    <%= form_for(:password_reset, url: password_resets_path) do |form| %>
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
      
      <%= form.submit "Submit by kask", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
