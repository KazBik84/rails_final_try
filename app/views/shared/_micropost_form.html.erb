<!-- html: {multipart: true} jest konieczny by można było uploadować pliki -->
<%= form_for(@micropost, html: {multipart: true} ) do |form| %>
	<%= render 'shared/error_messages', object: form.object %>
	<div class="field">
		<%= form.text_area :content, placeholder: "Compose new micropost..." %>
	</div>
	<%= form.submit "POST !!!", class: "btn btn-primary" %>
	<span class-"picture">
		<!-- Pole do uploadu plików, funkcja accept, jest validacja po stronie przegladarki
		i dopuszcze tylko okreslone rozszerzenia plikow typu image ??? chyba tak :) -->
		<%= form.file_field :picture, accept: 'image/jpg,image/gif,image/png'  %>
	</span>
<% end %>

<script type="text/javascript">
	$('#micropost_picture').bind('change', function() {
		size_in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 5) {
			alert("Maximum file size is 5MB. Please choose a smaller file.");
		}
	});
</script>
